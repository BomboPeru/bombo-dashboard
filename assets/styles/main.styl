.rounded
  border-radius 4px
.rounded-sm
  border-radius 4px

.elevation
  box-shadow 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)
.elevation-2
  box-shadow 0 3px 16px rgba(0, 0, 0, .16), 0 10px 32px rgba(0, 0, 0, .23)

.card-container
  background #fafafa
  min-width 100px
  min-height 100px
  overflow hidden
  font-family Titillium Web

.card-header--primary
  width 100%
  height 50px
  background #445F69
  padding 0px 0px
  color #fafafa

.card-header-line
  width 100%
  height 10px

.divider
  margin-top 8px
  height 0px
  border 1px solid #E8E8E8
  width 90%
  position: relative
  left: 50%
  transform: translateX(-50%)

.page-enter-active, .page-leave-active {
  transition: opacity .5s;
}
.page-enter, .page-leave-to {
  opacity: 0;
}
